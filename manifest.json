{
  "name": "Brainly TH Companion",
  "description": "__MSG_description__",
  "manifest_version": 3,
  "version":"1.0.0",
  "host_permissions": [
    "*://brainly.com/*"
  ],
  "permissions": ["storage", "scripting"],
  "web_accessible_resources": [{
    "matches": ["https://brainly.com/*"],
    "resources": ["resources/*/*.svg"]
  }],
  "content_scripts": [{
    "matches": ["*://znanija.com/*", "*://brainly.com/*"],
    "js": ["content-scripts/js/homepage.js", "content-scripts/js/icons.js"],
    "css": ["content-scripts/css/homepage.css"]
  },
  {
    "matches": ["*://brainly.com/profile/*"],
    "js": ["content-scripts/js/old_profile.js"],
    "css": ["content-scripts/css/old_profile.css"]
  },
  {
    "matches": ["*://brainly.com/*"],
    "js": ["content-scripts/js/styleguide.js"],
    "run_at": "document_start"
  },
  {
    "matches": ["*://brainly.com/question/*"],
    "js": ["content-scripts/js/question_page.js"]
   
  },
  {
    "matches": ["*://brainly.com/users/user_content/*/tasks/*"],
    "js": ["content-scripts/js/tasks.js"],
    "exclude_globs":["responses", "comments_tr"],
    "css": ["content-scripts/css/content_page.css"]
  },
  {
    "matches": ["*://brainly.com/users/user_content/*/responses/*"],
    "js": ["content-scripts/js/responses.js"],
    "css": ["content-scripts/css/content_page.css"]
   
  },{
    "matches": ["*://brainly.com/users/user_content/*/comments_tr/*"],
    "js": ["content-scripts/js/comments.js"],
    "css": ["content-scripts/css/content_page.css"]
   
  },{
    "matches": ["*://brainly.com/users/user_content*"],
    "js": ["content-scripts/js/full_content_page.js"]
   
   
  }

  
]
}
